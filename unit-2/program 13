n = int(input("Enter how many numbers: "))
numbers = []

for i in range(n):
    value = int(input("Enter number: "))
    numbers.append(value)

max_num = numbers[0]
min_num = numbers[0]
total = 0

for num in numbers:
    if num > max_num:
        max_num = num
    if num < min_num:
        min_num = num
    total = total + num

average = total / n

print("Maximum:", max_num)
print("Minimum:", min_num)
print("Average:", average)